rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload their own documents
    match /admissions/{userId}/{documentType}/{fileName} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // Allow staff/admin to read all documents
    match /admissions/{userId}/{documentType}/{fileName} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin'];
    }
    
    // Allow authenticated users to upload profile pictures
    match /profile-pictures/{userId}/{fileName} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // Allow staff/admin to read all profile pictures
    match /profile-pictures/{userId}/{fileName} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin'];
    }
  }
} 